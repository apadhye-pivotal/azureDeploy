{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "clusterName": {
      "type": "string",
      "defaultValue": "vgpdb",
      "metadata": {
        "description": "Cluster name"
      }
    },
    "centosRelease": {
      "type": "string",
      "defaultValue": "7.1",
      "metadata": {
        "description": "CentOS release version"
      },
      "allowedValues": [
        "6.6",
        "7.1",
        "northeurope"
      ] 
    },
    "adminUserName": {
      "type": "string",
      "defaultValue": "gpadmin",
      "metadata": {
        "description": "Admin user name for the VMs"
      }
    },
    "adminPassword": {
      "type": "securestring",
      "metadata": {
        "description": "Admin password for the VMs"
      }
    },
    "gpccUsername": {
      "type": "string",
      "defaultValue": "gpadmin",
      "metadata": {
        "description": "Username for the GPCC"
      }
    },
    "gpccPassword": {
      "type": "securestring",
      "metadata": {
        "description": "password for the GPCC"
      }
    },
    "storageAccountPrefix": {
      "type": "string",
      "metadata": {
        "description": "Unique namespace for the Storage Account where the VM disks will be placed (alphahumeric characters only)"
      }
    },
    "dnsNamePrefix": {
      "type": "string",
      "metadata": {
        "description": "Unique public DNS name where the VMs will be exposed"
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "westeurope",
      "allowedValues": [
        "westus",
        "eastus",
        "northeurope", 
        "westeurope",
        "eastasia",
        "southeastasia",
        "southcentralus",
        "centralus",
        "eastus2",
        "japaneast",
        "japanwest",
        "australiaeast",
        "australiasoutheast"
      ],
      "metadata": {
        "description": "Location where resources will be provisioned (must support premium storage)"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Premium_LRS",
      "metadata": {
        "description": "The type of the Storage Account to be created (Default to Premium_LRS)"
      }
    },
    "virtualNetworkName": {
      "type": "string",
      "defaultValue": "gpdbvnet",
      "metadata": {
        "description": "The name of the virtual network provisioned for the deployment"
      }
    },
    "subnetName": {
      "type": "string",
      "defaultValue": "gpdbsubnet",
      "metadata": {
        "description": "Subnet name for the virtual network where resources will be provisioned"
      }
    },
    "addressPrefix": {
      "type": "string",
      "defaultValue": "10.3.0.0/16",
      "metadata": {
        "description": "Virtual Network address CIDR"
      }
    },
    "subnetPrefix": {
      "type": "string",
      "defaultValue": "10.3.0.0/16",
      "metadata": {
        "description": "CIDR for the subnet where VMs will be placed"
      }
    },
    "nodeAddressPrefix": {
      "type": "string",
      "defaultValue": "10.3.0.",
      "metadata": {
        "description": "Prefix for all VM IP addresses (NOT a CIDR)"
      }
    },
    "masterNodeAddressStart": {
      "type": "int",
      "defaultValue": 10,
      "metadata": {
        "description": "IP suffix for first master node"
      }
    },
    "segmentNodeAddressStart": {
      "type": "int",
      "defaultValue": 20,
      "metadata": {
        "description": "IP suffix for first data node"
      }
    },
    "numberOfSegmentNodes": {
      "type": "int",
      "defaultValue": 3,
      "metadata": {
        "description": "Number of nodes (defaults to 3)"
      }
    },
    "artifactsBaseUrl": {
      "type": "string",
      "defaultValue": "",
      "metadata": {
        "description": "Base URL for scripts/manifests"
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_DS14",
      "allowedValues": [
        "Standard_A1",
        "Standard_A2",
        "Standard_A3",
        "Standard_A4",
        "Standard_D1",
        "Standard_D2",
        "Standard_D3",
        "Standard_D4",
        "Standard_DS14"
      ],
      "metadata": {
        "description": "The size of the VMs deployed in the cluster (defaults to Standard_DS14)"
      }
    }
  },
  "variables": {
    "templateAPIVersion":"2015-11-01",
    "resourceAPIVersion":"2015-06-15",
    "installGPCC":"True",
    "addressPrefix":"[parameters('addressPrefix')]",
    "subnetPrefix":"[parameters('subnetPrefix')]",
    "nodeAddressPrefix":"[parameters('nodeAddressPrefix')]",
    "scriptsUri": "[parameters('artifactsBaseUrl')]", 
    "storageAccount": {
      "prefix": "[parameters('storageAccountPrefix')]",
      "type": "[parameters('storageAccountType')]"
    },
    "clusterSpec": { 
      "clusterName": "[parameters('clusterName')]",
      "segmentNodes": "[parameters('numberOfSegmentNodes')]"
    },
    "vmSpec": {
      "imagePublisher": "OpenLogic",
      "imageVersion": "latest",
      "imageSKU": "[parameters('centosRelease')]",
      "imageOffer": "CentOS",
      "vmSize": "[parameters('vmSize')]",
      "privateIPAddressPrefix": "[variables('nodeAddressPrefix')]",
      "adminUserName": "[parameters('adminUserName')]",
      "adminPassword": "[parameters('adminPassword')]",
      "masterNodeASName": "[concat(parameters('dnsNamePrefix'), '-mnAS')]",
      "segmentNodeASName": "[concat(parameters('dnsNamePrefix'), '-dnAS')]",
      "segmentNodeDataDiskGB": "250"
    },
    "networkSpec": {
      "addressPrefix": "[variables('addressPrefix')]",
      "subnetPrefix": "[variables('subnetPrefix')]",
      "privateIPPrefix": "[variables('nodeAddressPrefix')]",
      "masterNodeAddressStart": "[parameters('masterNodeAddressStart')]",
      "segmentNodeAddressStart": "[parameters('segmentNodeAddressStart')]",
      "virtualNetworkName": "[parameters('virtualNetworkName')]",
      "virtualNetworkSubnetName": "[parameters('subnetName')]"
    }
  },
  "resources": [
    {
      "name": "common",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('templateAPIVersion')]",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptsUri'), '/common.json')]",
          "contentVersion": "1.0.0.1"
        },
        "parameters": {
          "resourceAPIVersion":{
            "value":"[variables('resourceAPIVersion')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "networkSpec": {
            "value": "[variables('networkSpec')]"
          },
          "masterNodeASName": {
            "value": "[variables('vmSpec').masterNodeASName]"
          },
          "segmentNodeASName": {
            "value": "[variables('vmSpec').segmentNodeASName]"
          }
        }
      }
    },
    {
      "name": "master-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('templateAPIVersion')]",
      "dependsOn": [
        "Microsoft.Resources/deployments/common"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptsUri'), '/master-node.json')]",
          "contentVersion": "1.0.0.1"
        },
        "parameters": {
          "resourceAPIVersion":{
            "value":"[variables('resourceAPIVersion')]"
          },
          "dnsNamePrefix": {
            "value": "[parameters('dnsNamePrefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptsUri": {
            "value": "[variables('scriptsUri')]"
          },
          "storageAccount": {
            "value": "[variables('storageAccount')]"
          },
          "vmCount": {
            "value": "[variables('clusterSpec').masterNodeCount]"
          },
          "vmSpec": {
            "value": "[variables('vmSpec')]"
          },
          "networkSpec": {
            "value": "[variables('networkSpec')]"
          },
          "clusterSpec": {
            "value": "[variables('clusterSpec')]"
          }
        }
      }
    },
    {
      "name": "segment-node",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('templateAPIVersion')]",
      "dependsOn": [
        "Microsoft.Resources/deployments/common"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptsUri'), '/segment-node.json')]",
          "contentVersion": "1.0.0.1"
        },
        "parameters": {
          "resourceAPIVersion":{
            "value":"[variables('resourceAPIVersion')]"
          },
          "dnsNamePrefix": {
            "value": "[parameters('dnsNamePrefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptsUri": {
            "value": "[variables('scriptsUri')]"
          },
          "storageAccount": {
            "value": "[variables('storageAccount')]"
          },
          "vmCount": {
            "value": "[variables('clusterSpec').segmentNodeCount]"
          },
          "vmSpec": {
            "value": "[variables('vmSpec')]"
          },
          "networkSpec": {
            "value": "[variables('networkSpec')]"
          },
          "clusterSpec": {
            "value": "[variables('clusterSpec')]"
          }
        }
      }
    },
    {
      "name": "install-gpdb",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "[variables('templateAPIVersion')]",
      "dependsOn": [
        "Microsoft.Resources/deployments/segment-node",
        "Microsoft.Resources/deployments/master-node"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(variables('scriptsUri'), '/install-gpdb.json')]",
          "contentVersion": "1.0.0.1"
        },
        "parameters": {
          "resourceAPIVersion":{
            "value":"[variables('resourceAPIVersion')]"
          },
          "dnsNamePrefix": {
            "value": "[parameters('dnsNamePrefix')]"
          },
          "location": {
            "value": "[parameters('location')]"
          },
          "scriptsUri": {
            "value": "[variables('scriptsUri')]"
          },
          "vmSpec": {
            "value": "[variables('vmSpec')]"
          },
          "networkSpec": {
            "value": "[variables('networkSpec')]"
          },
          "clusterSpec": {
            "value": "[variables('clusterSpec')]"
          },
          "fqdn": {
            "value": "[reference('master-node').outputs.fqdn.value]"
          },
          "gpccUsername": {
            "value": "[parameters('gpccUsername')]"
          },
          "gpccPassword": {
            "value": "[parameters('gpccPassword')]"
          },
          "installGPCC": {
            "value": "[variables('installGPCC')]"
          }
        }
      }
    }
  ]
}
